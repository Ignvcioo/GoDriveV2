<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".actividades.conductor.MapaConductorActividad">

    <include layout="@layout/action_bar_toollbar" ></include>

    <fragment
        android:id="@+id/mapa"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btnConectarse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conectarse"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:background="@drawable/boton_cuadrado_naranja"
        android:fontFamily="@font/fuente_secundaria"
        android:textAllCaps="false"
        android:elevation="0dp"
        android:layout_gravity="bottom"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="50dp"
        android:stateListAnimator="@null"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>